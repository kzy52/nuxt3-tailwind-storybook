{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["@nuxtjs/eslint-config-typescript", "prettier", "plugin:storybook/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore"
      }
    ],
    "no-debugger": "warn",
    "vue/multi-word-component-names": "off"
  }
}
